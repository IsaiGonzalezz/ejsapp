<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include('../secciones/head'); %>
    </head>
    <body class="d-flex flex-column min-vh-100">
        <main>
            <div class="container">
                <%- include('../secciones/menu'); %>
                <div class="row mt-5">
                    <div class="col-2"></div>
                    <div class="col-8">
                        <form action="/modificarEmpleado" method="post">
                            <%
                                empleado.forEach((empleado) => {

                            %>
                            <div class="card">
                                <div class="card-header bg-warning">
                                    <h1>Modificar datos Empleado</h1>
                                </div>
                                <div class="card-body">
                                    <input type="text" class="form-control mb-3" readonly="true" name="idempleado" id="idempleado" value="<%= empleado.id %>" />
                                    <input type="text" class="form-control mb-3" readonly="true" name="nombre" id="nombre" placeholder="Nombre del empleado" value="<%= empleado.nombre %>" />
                                    <input type="text" class="form-control mb-3" name="ocupacion" id="ocupacion" placeholder="Ocupacion del empleado" value="<%= empleado.ocupacion %>" />
                                    <input type="text" class="form-control mb-3" name="telefono" id="telefono" placeholder="Telefono del empleado" value="<%= empleado.telefono %>"/>
                                    <input type="text" class="form-control mb-3" name="direccion" id="direccion" placeholder="Direccion del empleado" value="<%= empleado.direccion %>"/>
                                    <input type="text" class="form-control mb-3" name="sueldo" id="sueldo" placeholder="Sueldo del empleado" value="<%= empleado.sueldo %>"/>
                                </div>
                                <div class="card-footer">
                                    <a class="btn btn-secondary mb-3 mt-3" href="/listarEmpleado">
                                        Cancelar
                                    </a>
                                    <button class="btn btn-primary mb-3 mt-3" type="submit">
                                        Guardar cambios
                                    </button> 
                                </div>
                            </div>
                            <%
                            });
                            %>
                        </form>
                    </div>
                    <div class="col-2"></div>
                </div>
            </div>
            <br/>
            <br/>
        </main>
        <footer class="footer mt-auto py-3 bg-dark">
            <%- include('../secciones/footer'); %>
        </footer>
    </body>
</html>